// File: 16f84a_g.lkr
// Generic linker script for the PIC16F84A processor
//// Begin: Added in gputils
//=========================================================================
//
//      Gputils Specific Revision History
//
//=========================================================================
//
//      01 Aug 2014  Changed the gpr0 onto gprnobank.
//
//// End: Added in gputils

LIBPATH .

CODEPAGE   NAME=reset_vec START=0x0000 END=0x0003  
CODEPAGE   NAME=isr_vec START=0x0004 END=0x00080   
CODEPAGE   NAME=page       START=0x30               END=0x3FF                    
CODEPAGE   NAME=.idlocs    START=0x2000            END=0x2003         PROTECTED 
CODEPAGE   NAME=devid      START=0x2006            END=0x2006         PROTECTED 
CODEPAGE   NAME=.config    START=0x2007            END=0x2007         PROTECTED 
CODEPAGE   NAME=eedata     START=0x2100            END=0x213F         PROTECTED 

DATABANK   NAME=sfr0       START=0x0               END=0xB            PROTECTED
DATABANK   NAME=sfr1       START=0x80              END=0x8B           PROTECTED


//// Begin: Changed in gputils
////SHAREBANK  NAME=gpr0       START=0xC             END=0x4F           
////SHAREBANK  NAME=gpr0       START=0x8C            END=0xCF           PROTECTED
SHAREBANK  NAME=gprnobank  START=0xC             END=0x4F           
SHAREBANK  NAME=gprnobank  START=0x8C            END=0xCF           PROTECTED
//// End: Changed in gputils

SECTION    NAME=PROG       ROM=page            // ROM code space
SECTION    NAME=IDLOCS     ROM=.idlocs         // ID locations
SECTION    NAME=DEEPROM    ROM=eedata          // Data EEPROM


SECTION    NAME=reset_vector ROM=reset_vec   
SECTION    NAME=isr_vector   ROM=isr_vec  
SECTION    NAME=common_var   RAM=gprnobank 
SECTION    NAME=led_udata    RAM=gprnobank
SECTION    NAME=IDLOCS     ROM=.idlocs         // ID locations
SECTION    NAME=DEEPROM    ROM=eedata          // Data EEPROM
